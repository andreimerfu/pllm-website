---
import CodeBlock from './CodeBlock.tsx';
import '../styles/prism.css';

const configExample = `guardrails:
  enabled: true
  guardrails:
    # Pre-call: Mask PII before sending to LLM
    - guardrail_name: "presidio-pii-detection"
      provider: "presidio"
      mode: ["pre_call", "logging_only"]
      enabled: true
      config:
        analyzer_url: "http://presidio-analyzer:3000"
        anonymizer_url: "http://presidio-anonymizer:3000"
        entities:
          - PERSON
          - EMAIL_ADDRESS
          - PHONE_NUMBER
          - CREDIT_CARD
          - SSN
        threshold: 0.7
        mask_pii: true
        language: "en"

    # Post-call: Detect PII leaked in responses
    - guardrail_name: "presidio-pii-response-scan"
      provider: "presidio"
      mode: ["post_call"]
      enabled: true
      config:
        threshold: 0.8`;

const modes = [
  {
    name: "Pre-Call",
    tag: "pre_call",
    description: "Intercepts and validates requests before they reach the LLM. Mask PII, block prompt injections, enforce compliance policies — all before a single token is sent.",
    example: "User sends credit card number → pLLM masks it as [CREDIT_CARD] → LLM never sees the original",
    color: "from-blue-500 to-indigo-600",
    solarIcon: "solar:lock-keyhole-bold-duotone",
    timing: "Synchronous, blocking",
  },
  {
    name: "Post-Call",
    tag: "post_call",
    description: "Scans LLM responses before they reach your users. Detect hallucinated PII, toxic content, or compliance violations in model output.",
    example: "LLM generates a fake SSN in output → pLLM detects and flags it → logged for review",
    color: "from-emerald-500 to-teal-600",
    solarIcon: "solar:check-circle-bold-duotone",
    timing: "Synchronous, non-blocking",
  },
  {
    name: "During-Call",
    tag: "during_call",
    description: "Runs guardrails in parallel with the LLM call for zero-latency monitoring. Ideal for background security checks that don't need to block the response.",
    example: "While LLM processes the request → pLLM runs threat detection in background → alerts on anomalies",
    color: "from-amber-500 to-orange-600",
    solarIcon: "solar:bolt-circle-bold-duotone",
    timing: "Asynchronous, non-blocking",
  },
  {
    name: "Logging-Only",
    tag: "logging_only",
    description: "Masks sensitive data before it's stored in logs or analytics. Ensures PII never reaches your database, audit trails, or monitoring systems.",
    example: "Request contains email → stored in logs as [EMAIL] → analytics stay PII-free",
    color: "from-purple-500 to-violet-600",
    solarIcon: "solar:document-text-bold-duotone",
    timing: "Before storage",
  },
];

const marketplaceItems = [
  {
    name: "Presidio PII Detection",
    provider: "Microsoft Presidio",
    status: "Available",
    statusColor: "bg-green-500",
    description: "Detect and mask personally identifiable information including names, emails, phone numbers, credit cards, and SSNs using Microsoft's open-source PII engine.",
    entities: ["PERSON", "EMAIL", "PHONE", "CREDIT_CARD", "SSN", "IP_ADDRESS"],
    color: "from-blue-500 to-blue-600",
    solarIcon: "solar:shield-check-bold-duotone",
  },
  {
    name: "Lakera Guard",
    provider: "Lakera AI",
    status: "Coming Soon",
    statusColor: "bg-amber-500",
    description: "Protect against prompt injections, jailbreaks, and other LLM-specific attacks. Real-time threat detection purpose-built for AI security.",
    entities: ["Prompt Injection", "Jailbreak", "Data Leakage", "Toxic Content"],
    color: "from-red-500 to-rose-600",
    solarIcon: "solar:danger-triangle-bold-duotone",
  },
  {
    name: "OpenAI Moderation",
    provider: "OpenAI",
    status: "Coming Soon",
    statusColor: "bg-amber-500",
    description: "Leverage OpenAI's moderation API to classify content across categories like hate speech, violence, self-harm, and sexual content.",
    entities: ["Hate", "Violence", "Self-Harm", "Sexual", "Harassment"],
    color: "from-slate-600 to-slate-700",
    solarIcon: "solar:scale-bold-duotone",
  },
  {
    name: "Aporia Guardrails",
    provider: "Aporia",
    status: "Coming Soon",
    statusColor: "bg-amber-500",
    description: "Enterprise ML security and compliance platform. Monitor model behavior, detect hallucinations, and enforce organizational policies.",
    entities: ["Hallucination", "Bias", "Policy", "Compliance"],
    color: "from-violet-500 to-purple-600",
    solarIcon: "solar:eye-bold-duotone",
  },
];
---

<section id="guardrails" class="section bg-white dark:bg-slate-900 transition-colors duration-200">
  <div class="container-page">
    <!-- Section header -->
    <div class="section-header">
      <div class="inline-flex items-center gap-2 badge-brand text-sm font-semibold mb-4">
        <iconify-icon icon="solar:shield-check-bold-duotone" width="16" height="16"></iconify-icon>
        Content Guardrails
      </div>
      <h2 class="section-title">
        Protect Every Request. Secure Every Response.
      </h2>
      <p class="section-description">
        Guardrails are pluggable security filters that validate, mask, and monitor content flowing through your LLM gateway.
        Run them before the LLM call, after, in parallel, or at logging time — each with its own purpose and behavior.
      </p>
    </div>

    <!-- Pipeline flow visual -->
    <div class="bg-slate-900 dark:bg-slate-950 rounded-xl p-8 lg:p-12 border border-slate-700 mb-20">
      <div class="text-center mb-10">
        <h3 class="text-2xl sm:text-3xl font-bold text-white mb-3">
          Request Lifecycle
        </h3>
        <p class="text-lg text-slate-400 max-w-2xl mx-auto">
          Guardrails plug into four stages of the request pipeline. Each stage has different behavior — choose what makes sense for your use case.
        </p>
      </div>

      <!-- Flow diagram -->
      <div class="flex flex-col lg:flex-row items-center justify-center gap-3 lg:gap-4 text-sm mb-10">
        <!-- User Request -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[180px] bg-slate-800 text-white rounded-xl px-5 py-4 text-center border border-slate-700">
            <div class="text-xs text-slate-400 mb-1">Incoming</div>
            <div class="font-bold">User Request</div>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-500 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Pre-Call -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[180px] bg-brand-600 text-white rounded-xl px-5 py-4 text-center">
            <div class="text-xs text-blue-200 mb-1">Stage 1</div>
            <div class="font-bold">Pre-Call</div>
            <div class="text-xs text-blue-200 mt-1">mask & validate</div>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-500 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- LLM Call -->
        <div class="flex flex-col items-center gap-2 min-w-0 relative">
          <div class="w-full max-w-[180px] bg-white dark:bg-slate-700 rounded-xl px-5 py-4 text-center border-2 border-brand-500">
            <div class="text-xs text-slate-500 dark:text-slate-400 mb-1">Processing</div>
            <div class="font-bold text-slate-900 dark:text-white">LLM Provider</div>
            <div class="text-xs text-brand-600 dark:text-brand-400 mt-1">GPT-4o / Claude / etc.</div>
          </div>
          <!-- During-call indicator -->
          <div class="hidden lg:block absolute -bottom-8 left-1/2 transform -translate-x-1/2 whitespace-nowrap">
            <span class="text-xs text-amber-400 font-mono flex items-center gap-1">
              <span class="w-1.5 h-1.5 rounded-full bg-amber-400 animate-pulse"></span>
              during-call runs in parallel
            </span>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-500 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Post-Call -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[180px] bg-emerald-600 text-white rounded-xl px-5 py-4 text-center">
            <div class="text-xs text-emerald-200 mb-1">Stage 3</div>
            <div class="font-bold">Post-Call</div>
            <div class="text-xs text-emerald-200 mt-1">scan & detect</div>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-500 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Response -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[180px] bg-slate-800 text-white rounded-xl px-5 py-4 text-center border border-slate-700">
            <div class="text-xs text-slate-400 mb-1">Delivered</div>
            <div class="font-bold">Response</div>
          </div>
        </div>
      </div>

      <!-- Logging stage note -->
      <div class="mt-12 bg-slate-800 rounded-xl p-4 border border-slate-700 max-w-2xl mx-auto">
        <div class="flex items-start gap-3">
          <iconify-icon icon="solar:document-text-bold-duotone" width="20" height="20" class="text-purple-400 flex-shrink-0 mt-0.5"></iconify-icon>
          <p class="text-sm text-slate-300">
            <strong class="text-white">Logging-only guardrails</strong> run separately before data reaches storage. They mask sensitive content in logs and analytics without affecting the live request/response flow.
          </p>
        </div>
      </div>
    </div>

    <!-- Four execution modes -->
    <div class="mb-20">
      <div class="text-center mb-12">
        <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4">
          Four Execution Modes
        </h3>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          Each guardrail can run in one or more modes. The same guardrail — like PII detection — can mask data pre-call, scan responses post-call, and redact logs simultaneously.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {modes.map((mode) => (
          <div class="card card-hover p-6 border-l-4 border-l-brand-500">
            <div class="flex items-start gap-4 mb-4">
              <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-slate-700 flex items-center justify-center flex-shrink-0">
                <iconify-icon icon={mode.solarIcon} width="24" height="24" class="text-slate-700 dark:text-slate-300"></iconify-icon>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-1 flex-wrap">
                  <h4 class="text-lg font-bold text-slate-900 dark:text-white">{mode.name}</h4>
                  <code class="text-xs font-mono bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-2 py-0.5 rounded">{mode.tag}</code>
                </div>
                <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed mb-3">{mode.description}</p>
              </div>
            </div>
            <div class="flex items-start gap-3 bg-slate-50 dark:bg-slate-700/50 rounded-xl px-4 py-3">
              <iconify-icon icon="solar:info-circle-bold-duotone" width="16" height="16" class="text-brand-500 flex-shrink-0 mt-0.5"></iconify-icon>
              <p class="text-xs text-slate-600 dark:text-slate-400 leading-relaxed">{mode.example}</p>
            </div>
            <div class="mt-3 flex items-center gap-2">
              <span class="text-xs font-medium text-slate-500 dark:text-slate-400">Execution:</span>
              <span class="text-xs font-mono bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-2 py-0.5 rounded">{mode.timing}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Guardrails Marketplace -->
    <div class="mb-20">
      <div class="text-center mb-12">
        <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4">
          Guardrails Marketplace
        </h3>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          Choose from pre-built guardrails for common security and compliance needs. Each integrates with a leading provider and plugs into any execution mode.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {marketplaceItems.map((item) => (
          <div class="card card-hover p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-slate-700 flex items-center justify-center flex-shrink-0">
                <iconify-icon icon={item.solarIcon} width="24" height="24" class="text-slate-700 dark:text-slate-300"></iconify-icon>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-1 flex-wrap">
                  <h4 class="text-lg font-bold text-slate-900 dark:text-white">{item.name}</h4>
                  <div class="flex items-center gap-1.5">
                    <div class={`w-2 h-2 rounded-full ${item.statusColor}`}></div>
                    <span class="text-xs font-medium text-slate-500 dark:text-slate-400">{item.status}</span>
                  </div>
                </div>
                <p class="text-xs text-slate-500 dark:text-slate-400 mb-2">by {item.provider}</p>
                <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">{item.description}</p>
              </div>
            </div>
            <div class="flex flex-wrap gap-1.5 mt-3">
              {item.entities.map((entity) => (
                <span class="text-xs font-mono bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-2 py-0.5 rounded">{entity}</span>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Custom connector callout -->
      <div class="mt-8 bg-slate-50 dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
        <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-brand-100 dark:bg-brand-900/40 flex items-center justify-center flex-shrink-0">
            <iconify-icon icon="solar:widget-add-bold-duotone" width="24" height="24" class="text-brand-600 dark:text-brand-400"></iconify-icon>
          </div>
          <div class="flex-1">
            <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-1">Build Your Own Guardrail</h4>
            <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
              A custom connector interface is on the roadmap — bring your own guardrail provider by implementing a simple HTTP interface. Plug in internal compliance tools, custom ML models, or any third-party service.
            </p>
          </div>
          <span class="badge-brand text-xs font-semibold whitespace-nowrap">Coming Soon</span>
        </div>
      </div>
    </div>

    <!-- Configuration example -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
      <div class="bg-slate-50 dark:bg-slate-800/80 border-b border-slate-200 dark:border-slate-700 px-6 py-4">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-xl bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center">
            <iconify-icon icon="solar:settings-bold-duotone" width="20" height="20" class="text-brand-600 dark:text-brand-400"></iconify-icon>
          </div>
          <div>
            <h4 class="text-lg font-bold text-slate-900 dark:text-white">Simple YAML Configuration</h4>
            <p class="text-sm text-slate-500 dark:text-slate-400">Enable guardrails with a few lines in your config — no code changes needed</p>
          </div>
        </div>
      </div>
      <div class="p-4 sm:p-6">
        <CodeBlock code={configExample} language="yaml" client:load />
      </div>
    </div>

    <!-- Key metrics -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mt-12">
      <div class="card p-6 text-center">
        <div class="text-3xl font-bold text-slate-900 dark:text-white mb-1">4</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Execution Modes</div>
      </div>
      <div class="card p-6 text-center">
        <div class="text-3xl font-bold text-slate-900 dark:text-white mb-1">&lt;50ms</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Avg. Guardrail Latency</div>
      </div>
      <div class="card p-6 text-center">
        <div class="text-3xl font-bold text-slate-900 dark:text-white mb-1">0</div>
        <div class="text-sm text-slate-600 dark:text-slate-400">Lines of Security Code in Your App</div>
      </div>
    </div>
  </div>
</section>
