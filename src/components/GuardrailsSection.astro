---
import CodeBlock from './CodeBlock.tsx';
import '../styles/prism.css';

const configExample = `guardrails:
  enabled: true
  guardrails:
    # Pre-call: Mask PII before sending to LLM
    - guardrail_name: "presidio-pii-detection"
      provider: "presidio"
      mode: ["pre_call", "logging_only"]
      enabled: true
      config:
        analyzer_url: "http://presidio-analyzer:3000"
        anonymizer_url: "http://presidio-anonymizer:3000"
        entities:
          - PERSON
          - EMAIL_ADDRESS
          - PHONE_NUMBER
          - CREDIT_CARD
          - SSN
        threshold: 0.7
        mask_pii: true
        language: "en"

    # Post-call: Detect PII leaked in responses
    - guardrail_name: "presidio-pii-response-scan"
      provider: "presidio"
      mode: ["post_call"]
      enabled: true
      config:
        threshold: 0.8`;

const modes = [
  {
    name: "Pre-Call",
    tag: "pre_call",
    description: "Intercepts and validates requests before they reach the LLM. Mask PII, block prompt injections, enforce compliance policies — all before a single token is sent.",
    example: "User sends credit card number → pLLM masks it as [CREDIT_CARD] → LLM never sees the original",
    color: "from-blue-500 to-indigo-600",
    iconPath: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>`,
    timing: "Synchronous, blocking",
