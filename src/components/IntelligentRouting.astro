---
import CodeBlock from './CodeBlock.tsx';
import '../styles/prism.css';

const routeConfigExample = `# Define a route called "smart" — your app just calls model: "smart"
# pLLM picks the best backend automatically

POST /api/admin/routes
{
  "name": "Smart Route",
  "slug": "smart",
  "strategy": "least-latency",
  "models": [
    { "model_name": "gpt-4o",           "weight": 60, "priority": 100 },
    { "model_name": "claude-sonnet-4",   "weight": 30, "priority": 80 },
    { "model_name": "gemini-2.5-pro",    "weight": 10, "priority": 60 }
  ],
  "fallback_models": ["gpt-4o-mini", "claude-haiku"]
}`;

const appUsageExample = `from openai import OpenAI

client = OpenAI(
    base_url="https://pllm.company.com/v1",
    api_key="pk-team-abc123"
)

# Your app calls the route slug — not a specific model
# pLLM selects the best backend in real-time
response = client.chat.completions.create(
    model="smart",  # ← This is a route, not a model
    messages=[{"role": "user", "content": "Analyze this data"}],
    stream=True
)

# If GPT-4o is slow → routes to Claude
# If Claude is down → circuit breaker opens, fails over to Gemini
# If all primary models fail → falls back to gpt-4o-mini
# Your app never knows. Zero code changes.`;

const strategies = [
  {
    name: "Least Latency",
    tag: "least-latency",
    description: "Routes every request to the fastest responding provider in real-time. Uses distributed latency tracking across all gateway nodes via Redis.",
    useCase: "Latency-sensitive apps",
    detail: "Exponential moving average (90/10) ensures responsive adaptation without oscillation",
    color: "from-emerald-500 to-teal-600",
    iconPath: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
  },
  {
    name: "Weighted Round-Robin",
    tag: "weighted-round-robin",
    description: "Distributes requests proportionally based on model weights using smooth interleaving — the same algorithm nginx uses.",
    useCase: "Capacity-based distribution",
    detail: "Smooth WRR prevents bursts: a 60/30/10 split interleaves evenly, not in blocks",
    color: "from-blue-500 to-indigo-600",
    iconPath: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>`,
  },
  {
    name: "Priority",
    tag: "priority",
    description: "Always routes to the highest-priority healthy provider. Lower-priority models only receive traffic during failover.",
    useCase: "Preferred provider setups",
    detail: "Use with fallback chains to build cost tiers: premium → standard → economy",
    color: "from-amber-500 to-orange-600",
    iconPath: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"/>`,
  },
  {
    name: "Random",
    tag: "random",
    description: "Uniform random selection across all healthy providers. Simple, stateless, no coordination needed between gateway nodes.",
    useCase: "Equal providers",
    detail: "Zero overhead — no counters, no Redis lookups, no state to synchronize",
    color: "from-purple-500 to-violet-600",
    iconPath: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>`,
  },
];

const failoverLayers = [
  {
    level: "1",
    title: "Instance Retry",
    description: "If an instance fails, pLLM tries another instance of the same model with increasing timeouts (1.5x multiplier).",
    color: "bg-blue-500",
  },
  {
    level: "2",
    title: "Model Failover",
    description: "If all instances of a model fail, the route strategy selects the next model in the route's model list.",
    color: "bg-amber-500",
  },
  {
    level: "3",
    title: "Fallback Chain",
    description: "If every model in the route is exhausted, pLLM walks through the fallback_models chain as a last resort.",
    color: "bg-red-500",
  },
];
---

<section id="routing" class="section bg-slate-50 dark:bg-slate-800/30 transition-colors duration-200">
  <div class="container-page">
    <!-- Section header -->
    <div class="section-header">
      <div class="inline-flex items-center gap-2 badge-brand text-sm font-semibold mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
        </svg>
        Intelligent Routing
      </div>
      <h2 class="section-title">
        Your App Says "smart". pLLM Does the Rest.
      </h2>
      <p class="section-description">
        Define named routes that map to multiple LLM providers with configurable strategies.
        Your application calls a single route slug — pLLM selects the best backend in real-time,
        handles failures automatically, and falls back gracefully. No code changes. Ever.
      </p>
    </div>

    <!-- Two-level routing visual -->
    <div class="bg-white dark:bg-slate-800 rounded-3xl p-8 lg:p-12 border border-slate-200 dark:border-slate-700 mb-20">
      <div class="text-center mb-10">
        <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-3">
          Two-Level Selection
        </h3>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          Routes solve which <strong>model</strong> to use. The system then picks the best <strong>instance</strong> of that model.
        </p>
      </div>

      <!-- Flow: App Request → Route Strategy → Model → Instance Strategy → Provider -->
      <div class="flex flex-col lg:flex-row items-center justify-center gap-3 lg:gap-4 text-sm">
        <!-- App Request -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[200px] bg-slate-900 dark:bg-slate-950 text-white rounded-xl px-5 py-4 text-center border border-slate-700">
            <div class="text-xs text-slate-400 mb-1 font-mono">Your App</div>
            <code class="text-brand-400 text-sm font-bold">model: "smart"</code>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-400 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Route Strategy -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[200px] bg-gradient-to-br from-brand-500 to-brand-600 text-white rounded-xl px-5 py-4 text-center shadow-lg">
            <div class="text-xs text-brand-200 mb-1">Level 1: Route</div>
            <div class="font-bold">Select Model</div>
            <div class="text-xs text-brand-200 mt-1">least-latency</div>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-400 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Selected Model -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[200px] bg-white dark:bg-slate-700 rounded-xl px-5 py-4 text-center border-2 border-brand-500 shadow-md">
            <div class="text-xs text-slate-500 dark:text-slate-400 mb-1">Winner</div>
            <div class="font-bold text-slate-900 dark:text-white">gpt-4o</div>
            <div class="text-xs text-green-600 dark:text-green-400 mt-1">lowest latency</div>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-400 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Instance Strategy -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[200px] bg-gradient-to-br from-emerald-500 to-green-600 text-white rounded-xl px-5 py-4 text-center shadow-lg">
            <div class="text-xs text-emerald-200 mb-1">Level 2: Instance</div>
            <div class="font-bold">Select Instance</div>
            <div class="text-xs text-emerald-200 mt-1">health + latency</div>
          </div>
        </div>

        <svg class="w-6 h-6 text-slate-400 flex-shrink-0 rotate-90 lg:rotate-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>

        <!-- Provider -->
        <div class="flex flex-col items-center gap-2 min-w-0">
          <div class="w-full max-w-[200px] bg-slate-100 dark:bg-slate-700 rounded-xl px-5 py-4 text-center border border-slate-200 dark:border-slate-600">
            <div class="text-xs text-slate-500 dark:text-slate-400 mb-1">Executed</div>
            <div class="font-bold text-slate-900 dark:text-white">OpenAI</div>
            <div class="text-xs text-slate-500 dark:text-slate-400 mt-1">us-east instance #2</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Route config + app usage side by side -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 mb-20">
      <!-- Define the route -->
      <div class="bg-white dark:bg-slate-800 rounded-3xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="bg-slate-50 dark:bg-slate-800/80 border-b border-slate-200 dark:border-slate-700 px-6 py-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center">
              <svg class="w-5 h-5 text-brand-600 dark:text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">1. Define a Route</h4>
              <p class="text-sm text-slate-500 dark:text-slate-400">Via Admin API or config — no restart needed</p>
            </div>
          </div>
        </div>
        <div class="p-4 sm:p-6">
          <CodeBlock code={routeConfigExample} language="javascript" client:load />
        </div>
      </div>

      <!-- Use in your app -->
      <div class="bg-white dark:bg-slate-800 rounded-3xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="bg-slate-50 dark:bg-slate-800/80 border-b border-slate-200 dark:border-slate-700 px-6 py-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">2. Use It in Your App</h4>
              <p class="text-sm text-slate-500 dark:text-slate-400">Standard OpenAI SDK — the route slug is the model name</p>
            </div>
          </div>
        </div>
        <div class="p-4 sm:p-6">
          <CodeBlock code={appUsageExample} language="python" client:load />
        </div>
      </div>
    </div>

    <!-- Routing strategies -->
    <div class="mb-20">
      <div class="text-center mb-12">
        <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4">
          Four Routing Strategies
        </h3>
        <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
          Each route chooses a strategy. The strategy runs at request time to pick the best model — using real-time metrics, not static config.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {strategies.map((strategy) => (
          <div class="card card-hover p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class={`w-12 h-12 rounded-xl bg-gradient-to-br ${strategy.color} flex items-center justify-center flex-shrink-0 shadow-sm`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={strategy.iconPath} />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-1 flex-wrap">
                  <h4 class="text-lg font-bold text-slate-900 dark:text-white">{strategy.name}</h4>
                  <code class="text-xs font-mono bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 px-2 py-0.5 rounded">{strategy.tag}</code>
                </div>
                <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed mb-3">{strategy.description}</p>
              </div>
            </div>
            <div class="flex items-start gap-3 bg-slate-50 dark:bg-slate-700/50 rounded-xl px-4 py-3">
              <svg class="w-4 h-4 text-brand-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-xs text-slate-600 dark:text-slate-400 leading-relaxed">{strategy.detail}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Three-layer failover + circuit breaker -->
    <div class="bg-slate-900 dark:bg-slate-950 rounded-3xl p-8 lg:p-12 border border-slate-700">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16">
        <!-- Failover layers -->
        <div>
          <h3 class="text-2xl sm:text-3xl font-bold text-white mb-3">
            Three-Layer Failover
          </h3>
          <p class="text-slate-400 mb-8 leading-relaxed">
            When a provider fails, pLLM doesn't just retry — it escalates through three layers of resilience before ever returning an error to your app.
          </p>

          <div class="space-y-4">
            {failoverLayers.map((layer) => (
              <div class="flex items-start gap-4">
                <div class={`w-10 h-10 rounded-xl ${layer.color} flex items-center justify-center flex-shrink-0 shadow-lg`}>
                  <span class="text-white font-bold text-sm">{layer.level}</span>
                </div>
                <div>
                  <h4 class="text-white font-bold mb-1">{layer.title}</h4>
                  <p class="text-slate-400 text-sm leading-relaxed">{layer.description}</p>
                </div>
              </div>
            ))}
          </div>

          <div class="mt-8 bg-slate-800 rounded-xl p-4 border border-slate-700">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-amber-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
              <p class="text-sm text-slate-300">
                Each retry uses <strong class="text-white">1.5x increased timeout</strong> to account for provider recovery. Up to 10 failover hops with loop detection.
              </p>
            </div>
          </div>
        </div>

        <!-- Circuit breaker -->
        <div>
          <h3 class="text-2xl sm:text-3xl font-bold text-white mb-3">
            Self-Healing Circuit Breaker
          </h3>
          <p class="text-slate-400 mb-8 leading-relaxed">
            Unhealthy providers are automatically removed from rotation and tested for recovery — no manual intervention needed.
          </p>

          <div class="space-y-3">
            <!-- Closed state -->
            <div class="bg-slate-800 rounded-xl p-4 border border-slate-700">
              <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 rounded-full bg-green-500 shadow-sm shadow-green-500/50"></div>
                <h4 class="text-green-400 font-bold text-sm">CLOSED — Healthy</h4>
              </div>
              <p class="text-slate-400 text-xs leading-relaxed">Normal operation. All traffic flows through. Failure counter active.</p>
            </div>

            <div class="flex justify-center">
              <div class="flex flex-col items-center">
                <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                </svg>
                <span class="text-xs text-slate-600 font-mono">3 failures</span>
              </div>
            </div>

            <!-- Open state -->
            <div class="bg-slate-800 rounded-xl p-4 border border-red-900/50">
              <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 rounded-full bg-red-500 shadow-sm shadow-red-500/50"></div>
                <h4 class="text-red-400 font-bold text-sm">OPEN — Unhealthy</h4>
              </div>
              <p class="text-slate-400 text-xs leading-relaxed">Traffic blocked. Provider removed from rotation. 30s cooldown starts.</p>
            </div>

            <div class="flex justify-center">
              <div class="flex flex-col items-center">
                <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                </svg>
                <span class="text-xs text-slate-600 font-mono">30s cooldown</span>
              </div>
            </div>

            <!-- Half-open state -->
            <div class="bg-slate-800 rounded-xl p-4 border border-amber-900/50">
              <div class="flex items-center gap-3 mb-2">
                <div class="w-3 h-3 rounded-full bg-amber-500 shadow-sm shadow-amber-500/50"></div>
                <h4 class="text-amber-400 font-bold text-sm">HALF-OPEN — Testing</h4>
              </div>
              <p class="text-slate-400 text-xs leading-relaxed">Single test request allowed. Success → closed. Failure → back to open.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Why this matters callout -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-10 pt-8 border-t border-slate-700">
        <div class="text-center">
          <div class="text-3xl font-bold text-white">0</div>
          <div class="text-sm text-slate-400">Lines of Retry Code in Your App</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white">&lt;30s</div>
          <div class="text-sm text-slate-400">Automatic Recovery Time</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white">10</div>
          <div class="text-sm text-slate-400">Max Failover Hops</div>
        </div>
      </div>
    </div>

    <!-- Why this is powerful for apps -->
    <div class="mt-20">
      <div class="text-center mb-12">
        <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4">
          Why This Changes Everything for Your App
        </h3>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="card card-hover p-6">
          <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-2">Zero Retry Logic</h4>
          <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
            Stop writing try/catch/retry in every LLM call. pLLM handles retries, failover, and fallbacks at the gateway level. Your app code stays clean.
          </p>
        </div>

        <div class="card card-hover p-6">
          <div class="w-10 h-10 rounded-xl bg-green-100 dark:bg-green-900/30 flex items-center justify-center mb-4">
            <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
            </svg>
          </div>
          <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-2">Swap Providers at Runtime</h4>
          <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
            Move from OpenAI to Anthropic — or add Gemini to the mix — via the admin API. No deploy, no restart, no code changes in any app.
          </p>
        </div>

        <div class="card card-hover p-6">
