<footer class="bg-slate-900 dark:bg-slate-950 text-slate-300 dark:text-slate-400 transition-colors duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <!-- Main footer content -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8">
            <!-- Brand -->
            <div class="lg:col-span-1">
                <div class="flex items-center space-x-2 mb-4">
                    <div
                        class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center"
                    >
                        <span class="text-white font-bold text-lg">p</span>
                    </div>
                    <span class="text-xl font-bold text-white dark:text-slate-100 transition-colors duration-200">pLLM</span>
                </div>
                <p class="text-slate-400 dark:text-slate-500 mb-6 max-w-sm transition-colors duration-200">
                    Enterprise-Grade LLM Gateway built in Go. High-performance,
                    OpenAI compatible, with adaptive routing and cost
                    optimization.
                </p>

                <!-- Social links -->
                <div class="flex space-x-4">
                    {
                        socialLinks.map((link) => (
                            <a
                                href={link.href}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="bg-slate-800 dark:bg-slate-900 hover:bg-slate-700 dark:hover:bg-slate-800 p-2 rounded-lg transition-colors duration-200">
                                aria-label={link.name}
                            >
                                <svg
                                    class="w-5 h-5 fill-current text-slate-300 dark:text-slate-400 transition-colors duration-200"
                                    viewBox="0 0 24 24"
                                >
                                    <Fragment set:html={link.icon} />
                                </svg>
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Footer links -->
            {
                Object.entries(footerLinks).map(([category, links]) => (
                    <div>
                        <h3 class="text-white dark:text-slate-100 font-semibold mb-4 transition-colors duration-200">
                            {category}
                        </h3>
                        <ul class="space-y-3">
                            {links.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        target={
                                            link.external ? "_blank" : undefined
                                        }
                                        rel={
                                            link.external
                                                ? "noopener noreferrer"
                                                : undefined
                                        }
                                        class="text-slate-400 dark:text-slate-500 hover:text-white dark:hover:text-slate-100 transition-colors duration-200 text-sm"
                                    >
                                        {link.name}
                                        {link.external && (
                                            <svg
                                                class="inline-block ml-1 w-3 h-3"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                />
                                            </svg>
                                        )}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>

        <!-- Bottom border -->
        <div class="border-t border-slate-800 dark:border-slate-700 mt-12 pt-8 transition-colors duration-200">
            <div class="flex flex-col sm:flex-row justify-between items-center">
                <!-- Copyright -->
                <div class="text-slate-400 dark:text-slate-500 text-sm mb-4 sm:mb-0 transition-colors duration-200">
                    Â© 2025 pLLM. Released under the MIT License.
                </div>

                <!-- Version info -->
                <div class="flex items-center space-x-6 text-sm text-slate-400 dark:text-slate-500 transition-colors duration-200">
                    <div class="flex items-center">
                        <div class="w-2 h-2 bg-green-500 rounded-full mr-2">
                        </div>
                        Latest: v1.0.0
                    </div>
                    <div class="flex items-center">
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        Go 1.23+
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
