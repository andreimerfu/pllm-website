---
import RoadmapTimeline from './RoadmapTimeline.tsx';
import { MessageCircle, PlusCircle } from 'lucide-react';
---

<section id="roadmap" class="section bg-slate-50 dark:bg-slate-900/50">
  <div class="container-page">
    <!-- Section header -->
    <div class="section-header">
      <h2 class="section-title">
        Product Roadmap
      </h2>
      <p class="section-description">
        Exciting features coming soon to make pLLM even more powerful and enterprise-ready.
      </p>
    </div>

    <!-- Timeline -->
    <RoadmapTimeline client:load />

    <!-- Call to action -->
    <div class="mt-16 text-center">
      <div class="card p-8 lg:p-12">
        <h3 class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white mb-4">
          Shape Our Roadmap
        </h3>
        <p class="text-lg text-slate-600 dark:text-slate-400 mb-6 max-w-2xl mx-auto">
          Have a feature request or want to influence our development priorities? We'd love to hear from you.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a
            href="https://github.com/andreimerfu/pllm/discussions"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary flex items-center"
          >
            <MessageCircle className="w-4 h-4 mr-2" />
            Join Discussion
          </a>
          <a
            href="https://github.com/andreimerfu/pllm/issues/new"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary flex items-center"
          >
            <PlusCircle className="w-4 h-4 mr-2" />
            Request Feature
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
