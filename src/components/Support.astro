---
import SupportTiers from './SupportTiers.tsx';
import FAQSection from './FAQSection.tsx';
---

<section id="support" class="section bg-white dark:bg-slate-900 transition-colors duration-200">
  <div class="container-page">
    <!-- Section header -->
    <div class="section-header">
      <h2 class="section-title">
        Enterprise Support
      </h2>
      <p class="section-description">
        While pLLM is open source and free, we offer professional support and custom solutions for enterprises with mission-critical requirements.
      </p>
    </div>

    <!-- Support tiers -->
    <SupportTiers client:load />

    <!-- Enterprise contact section -->
    <div class="mt-20">
      <div class="bg-slate-50 dark:bg-slate-800 rounded-xl p-8 lg:p-12 border border-slate-200 dark:border-slate-700">
        <div class="mb-8">
          <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4 tracking-tight">
            Ready for Enterprise Deployment?
          </h3>
          <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl">
            Contact our team for custom integrations, dedicated support, and enterprise-grade deployment assistance.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          <!-- Professional Consultation -->
          <div class="card p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-brand-100 dark:bg-brand-900/30 rounded-lg flex items-center justify-center mr-4">
                <iconify-icon icon="solar:users-group-rounded-bold-duotone" width="24" height="24" class="text-brand-600 dark:text-brand-400"></iconify-icon>
              </div>
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">Professional Consultation</h4>
            </div>
            <p class="text-slate-600 dark:text-slate-400 text-sm">
              Architecture review, deployment planning, and best practices guidance from our core team.
            </p>
          </div>

          <!-- Custom Development -->
          <div class="card p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-brand-100 dark:bg-brand-900/30 rounded-lg flex items-center justify-center mr-4">
                <iconify-icon icon="solar:code-bold-duotone" width="24" height="24" class="text-brand-600 dark:text-brand-400"></iconify-icon>
              </div>
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">Custom Development</h4>
            </div>
            <p class="text-slate-600 dark:text-slate-400 text-sm">
              Tailored features, custom integrations, and specialized deployment configurations for your use case.
            </p>
          </div>

          <!-- Dedicated Support -->
          <div class="card p-6">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-brand-100 dark:bg-brand-900/30 rounded-lg flex items-center justify-center mr-4">
                <iconify-icon icon="solar:headphones-round-sound-bold-duotone" width="24" height="24" class="text-brand-600 dark:text-brand-400"></iconify-icon>
              </div>
              <h4 class="text-lg font-bold text-slate-900 dark:text-white">Dedicated Support</h4>
            </div>
            <p class="text-slate-600 dark:text-slate-400 text-sm">
              Priority support channels, SLA guarantees, and direct access to our engineering team.
            </p>
          </div>
        </div>

        <!-- Contact methods -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Schedule consultation -->
          <div class="card p-6">
            <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Schedule a Consultation</h4>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">
              Book a 30-minute call to discuss your requirements and explore how pLLM can fit your enterprise needs.
            </p>
            <a
              href="https://calendly.com/andrei-amgital/30min"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary text-sm py-2 px-4"
            >
              <iconify-icon icon="solar:calendar-bold-duotone" width="16" height="16" class="mr-2"></iconify-icon>
              Book Consultation
            </a>
          </div>

          <!-- Enterprise inquiry -->
          <div class="card p-6">
            <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Enterprise Inquiry</h4>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">
              Submit a detailed inquiry for custom features, deployment assistance, or partnership opportunities.
            </p>
            <a
              href="https://tally.so/r/nreKO2"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-secondary text-sm py-2 px-4"
            >
              <iconify-icon icon="solar:document-text-bold-duotone" width="16" height="16" class="mr-2"></iconify-icon>
              Submit Inquiry Form
            </a>
          </div>

          <!-- Email contact -->
          <div class="card p-6">
            <h4 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Email Us Directly</h4>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">
              Prefer email? Reach out directly for enterprise inquiries, procurement, or partnership discussions.
            </p>
            <a
              href="mailto:enterprise@pllm.dev"
              class="btn-secondary text-sm py-2 px-4"
            >
              <iconify-icon icon="solar:letter-bold-duotone" width="16" height="16" class="mr-2"></iconify-icon>
              enterprise@pllm.dev
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- FAQ section -->
    <div class="mt-20">
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-4 tracking-tight">
          Frequently Asked Questions
        </h3>
        <p class="text-slate-600 dark:text-slate-400 max-w-2xl">
          Everything you need to know about pLLM, from technical details to enterprise support options.
        </p>
      </div>

      <div class="max-w-7xl mx-auto">
        <FAQSection client:load />
      </div>
    </div>
  </div>
</section>
