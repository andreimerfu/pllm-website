---

<section id="features" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl sm:text-5xl font-bold text-slate-900 mb-6">
                Enterprise-Grade Features
            </h2>
            <p class="text-xl text-slate-600 max-w-3xl mx-auto">
                Built from the ground up for production workloads with
                performance, reliability, and developer experience in mind.
            </p>
        </div>

        <!-- Main features grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
            {
                mainFeatures.map((feature) => (
                    <div class="group relative bg-gradient-to-br from-slate-50 to-slate-100 rounded-2xl p-8 hover:shadow-lg transition-all duration-300 border border-slate-200 hover:border-slate-300">
                        {feature.badge && (
                            <div class="absolute -top-3 -right-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white text-xs font-semibold px-3 py-1 rounded-full">
                                {feature.badge}
                            </div>
                        )}
                        <div class="flex items-center mb-4">
                            <div class="text-3xl mr-4">{feature.icon}</div>
                            <h3 class="text-xl font-bold text-slate-900">
                                {feature.title}
                            </h3>
                        </div>
                        <p class="text-slate-600 leading-relaxed">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>

        <!-- Technical features -->
        <div
            class="bg-gradient-to-br from-slate-50 to-slate-100 rounded-3xl p-8 lg:p-12"
        >
            <div class="text-center mb-12">
                <h3 class="text-3xl font-bold text-slate-900 mb-4">
                    Technical Excellence
                </h3>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                    Deep technical capabilities designed for mission-critical
                    production environments.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    technicalFeatures.map((category) => (
                        <div class="bg-white rounded-2xl p-6 shadow-sm">
                            <h4 class="text-lg font-bold text-slate-900 mb-4 flex items-center">
                                <div class="w-3 h-3 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full mr-3" />
                                {category.category}
                            </h4>
                            <ul class="space-y-3">
                                {category.features.map((feature) => (
                                    <li class="text-slate-600 text-sm flex items-start">
                                        <svg
                                            class="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M5 13l4 4L19 7"
                                            />
                                        </svg>
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Performance comparison -->
        <div class="mt-20">
            <div class="text-center mb-12">
                <h3 class="text-3xl font-bold text-slate-900 mb-4">
                    Performance Advantage
                </h3>
                <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                    See how pLLM compares to typical interpreted gateway
                    solutions.
                </p>
            </div>

            <div
                class="bg-white rounded-2xl border border-slate-200 overflow-hidden"
            >
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50">
                            <tr>
                                <th
                                    class="text-left p-6 font-semibold text-slate-900"
                                    >Metric</th
                                >
                                <th
                                    class="text-left p-6 font-semibold text-slate-900"
                                    >pLLM (Go)</th
                                >
                                <th
                                    class="text-left p-6 font-semibold text-slate-600"
                                    >Typical Gateway</th
                                >
                                <th
                                    class="text-left p-6 font-semibold text-green-600"
                                    >Advantage</th
                                >
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100">
                            <tr>
                                <td class="p-6 font-medium text-slate-900"
                                    >Concurrent Connections</td
                                >
                                <td class="p-6 text-slate-700">Thousands</td>
                                <td class="p-6 text-slate-500">Limited</td>
                                <td class="p-6 text-green-600 font-semibold"
                                    >üöÄ Superior</td
                                >
                            </tr>
                            <tr class="bg-slate-25">
                                <td class="p-6 font-medium text-slate-900"
                                    >Memory Usage</td
                                >
                                <td class="p-6 text-slate-700">50-80MB</td>
                                <td class="p-6 text-slate-500">150-300MB+</td>
                                <td class="p-6 text-green-600 font-semibold"
                                    >üíæ 3-6x Less</td
                                >
                            </tr>
                            <tr>
                                <td class="p-6 font-medium text-slate-900"
                                    >Startup Time</td
                                >
                                <td class="p-6 text-slate-700">&lt;100ms</td>
                                <td class="p-6 text-slate-500">2-5s</td>
                                <td class="p-6 text-green-600 font-semibold"
                                    >‚ö° 20-50x Faster</td
                                >
                            </tr>
                            <tr class="bg-slate-25">
                                <td class="p-6 font-medium text-slate-900"
                                    >CPU Efficiency</td
                                >
                                <td class="p-6 text-slate-700">All cores</td>
                                <td class="p-6 text-slate-500">GIL limited</td>
                                <td class="p-6 text-green-600 font-semibold"
                                    >üî• True Parallel</td
                                >
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
