---
import { IconBox } from "./FeatureIcons.tsx";
import { Check } from "lucide-react";
import type { FeatureIconName } from "./FeatureIcons.tsx";

interface Feature {
    title: string;
    description: string;
    icon: FeatureIconName;
    badge?: string;
}

const mainFeatures: Feature[] = [
    {
        title: "100% OpenAI Compatible",
        description:
            "Drop-in replacement for OpenAI API. No code changes needed - just update your base URL and you're ready to go.",
        icon: "compatibility",
        badge: "Zero Migration",
    },
    {
        title: "Multi-Provider Support",
        description:
            "Support for OpenAI, Anthropic, Azure OpenAI, AWS Bedrock, Vertex AI, Llama, and Cohere with unified interface.",
        icon: "multiProvider",
        badge: "7+ Providers",
    },
    {
        title: "Adaptive Routing",
        description:
            "Intelligent request routing with automatic failover, circuit breakers, and health-based load balancing.",
        icon: "routing",
        badge: "Zero Downtime",
    },
    {
        title: "High Performance",
        description:
            "Built in Go for maximum performance. Handle thousands of concurrent requests with minimal latency overhead.",
        icon: "performance",
        badge: "Native Go",
    },
    {
        title: "Enterprise Security",
        description:
            "JWT authentication, RBAC, audit logging, and comprehensive monitoring with Prometheus metrics.",
        icon: "security",
        badge: "Production Ready",
    },
    {
        title: "Cost Optimization",
        description:
            "Budget management, intelligent caching, and multi-key load balancing to minimize API costs.",
        icon: "cost",
        badge: "Save Money",
    },
];

const technicalFeatures = [
    {
        category: "Performance",
        color: "brand",
        features: [
            "Sub-millisecond routing overhead",
            "Thousands of concurrent connections",
            "Native compilation with Go",
            "Efficient memory management",
        ],
    },
    {
        category: "Reliability",
        color: "accent",
        features: [
            "Circuit breaker protection",
            "Automatic health monitoring",
            "Graceful degradation",
            "Zero-downtime deployments",
        ],
    },
    {
        category: "Scalability",
        color: "success",
        features: [
            "Horizontal scaling ready",
            "Kubernetes native",
            "Redis-backed caching",
            "Distributed rate limiting",
        ],
    },
    {
        category: "Observability",
        color: "warning",
        features: [
            "Prometheus metrics",
            "Grafana dashboards",
            "Distributed tracing",
            "Comprehensive logging",
        ],
    },
];

const categoryColors: Record<string, string> = {
    brand: "bg-brand-500",
    accent: "bg-accent-500",
    success: "bg-green-500",
    warning: "bg-amber-500",
};
---

<section
    id="features"
    class="section bg-white dark:bg-slate-900 transition-colors duration-200"
>
    <div class="container-page">
        <!-- Section header -->
        <div class="section-header">
            <h2 class="section-title">
                Enterprise-Grade Features
            </h2>
            <p class="section-description">
                Built from the ground up for production workloads with
                performance, reliability, and developer experience in mind.
            </p>
        </div>

        <!-- Top 2 features: full-width horizontal cards -->
        <div class="space-y-6 mb-8">
            {
                mainFeatures.slice(0, 2).map((feature) => (
                    <div class="card card-hover p-6 grid grid-cols-1 md:grid-cols-[auto_1fr] gap-6 items-center">
                        <div class="flex items-center gap-4">
                            <IconBox name={feature.icon} size="md" variant="brand" client:load />
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white">
                                {feature.title}
                            </h3>
                        </div>
                        <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>

        <!-- Remaining 4 features: 2x2 grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-20">
            {
                mainFeatures.slice(2).map((feature) => (
                    <div class="card card-hover p-6">
                        <div class="flex items-start gap-4 mb-4">
                            <IconBox name={feature.icon} size="md" variant="brand" client:load />
                            <h3 class="text-lg font-bold text-slate-900 dark:text-white pt-2">
                                {feature.title}
                            </h3>
                        </div>
                        <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                            {feature.description}
                        </p>
                    </div>
                ))
            }
        </div>

        <!-- Technical features -->
        <div class="bg-slate-50 dark:bg-slate-800/50 rounded-xl p-8 lg:p-12 border border-slate-200 dark:border-slate-700">
            <div class="text-center mb-12">
                <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4">
                    Technical Excellence
                </h3>
                <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
                    Deep technical capabilities designed for mission-critical
                    production environments.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    technicalFeatures.map((category) => (
                        <div class="card p-6">
                            <h4 class="text-lg font-bold text-slate-900 dark:text-white mb-4 flex items-center">
                                <div class={`w-2.5 h-2.5 ${categoryColors[category.color]} rounded-full mr-3`} />
                                {category.category}
                            </h4>
                            <ul class="space-y-3">
                                {category.features.map((feature) => (
                                    <li class="text-slate-600 dark:text-slate-400 text-sm flex items-start">
                                        <Check className="w-4 h-4 text-green-500 mr-2 mt-0.5 flex-shrink-0" />
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Performance comparison -->
        <div class="mt-20">
            <div class="text-center mb-12">
                <h3 class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white mb-4">
                    Performance Advantage
                </h3>
                <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
                    See how pLLM compares to typical interpreted gateway solutions.
                </p>
            </div>

            <div class="card overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50 dark:bg-slate-700/50">
                            <tr>
                                <th class="text-left p-5 font-semibold text-slate-900 dark:text-white">
                                    Metric
                                </th>
                                <th class="text-left p-5 font-semibold text-brand-600 dark:text-brand-400">
                                    pLLM (Go)
                                </th>
                                <th class="text-left p-5 font-semibold text-slate-500 dark:text-slate-400">
                                    Typical Gateway
                                </th>
                                <th class="text-left p-5 font-semibold text-green-600 dark:text-green-400">
                                    Advantage
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                <td class="p-5 font-medium text-slate-900 dark:text-white">
                                    Concurrent Connections
                                </td>
                                <td class="p-5 text-slate-700 dark:text-slate-300">
                                    Thousands
                                </td>
                                <td class="p-5 text-slate-500 dark:text-slate-400">
                                    Limited
                                </td>
                                <td class="p-5 text-green-600 dark:text-green-400 font-medium">
                                    Superior
                                </td>
                            </tr>
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                <td class="p-5 font-medium text-slate-900 dark:text-white">
                                    Memory Usage
                                </td>
                                <td class="p-5 text-slate-700 dark:text-slate-300">
                                    50-80MB
                                </td>
                                <td class="p-5 text-slate-500 dark:text-slate-400">
                                    150-300MB+
                                </td>
                                <td class="p-5 text-green-600 dark:text-green-400 font-medium">
                                    3-6x Less
                                </td>
                            </tr>
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                <td class="p-5 font-medium text-slate-900 dark:text-white">
                                    Startup Time
                                </td>
                                <td class="p-5 text-slate-700 dark:text-slate-300">
                                    &lt;100ms
                                </td>
                                <td class="p-5 text-slate-500 dark:text-slate-400">
                                    2-5s
                                </td>
                                <td class="p-5 text-green-600 dark:text-green-400 font-medium">
                                    20-50x Faster
                                </td>
                            </tr>
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-800/50 transition-colors">
                                <td class="p-5 font-medium text-slate-900 dark:text-white">
                                    CPU Efficiency
                                </td>
                                <td class="p-5 text-slate-700 dark:text-slate-300">
                                    All cores
                                </td>
                                <td class="p-5 text-slate-500 dark:text-slate-400">
                                    GIL limited
                                </td>
                                <td class="p-5 text-green-600 dark:text-green-400 font-medium">
                                    True Parallel
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
