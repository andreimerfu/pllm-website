---
import HeroIllustration from "./HeroIllustration.tsx";
import { Github } from "lucide-react";
---

<section class="relative pt-28 pb-16 sm:pb-24">
    <div class="container-page">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
            <!-- Text content — left-aligned -->
            <div>
                <h1 class="text-hero-sm sm:text-hero font-bold text-slate-900 dark:text-white mb-4 tracking-tight">
                    <span class="text-brand-600 dark:text-brand-400">pLLM</span>
                </h1>
                <p class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900 dark:text-white mb-6 tracking-tight">
                    High-Performance LLM Gateway
                </p>

                <p class="text-lg text-slate-600 dark:text-slate-400 mb-8 max-w-lg leading-relaxed">
                    Drop-in OpenAI replacement built in Go. Handle thousands of
                    concurrent requests with adaptive routing, multi-provider
                    support, and enterprise-grade reliability.
                </p>

                <!-- Feature pills -->
                <div class="flex flex-wrap gap-2 mb-8">
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-md text-xs font-medium text-slate-600 dark:text-slate-400">High Performance</span>
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-md text-xs font-medium text-slate-600 dark:text-slate-400">Cost Efficient</span>
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-md text-xs font-medium text-slate-600 dark:text-slate-400">Low Latency</span>
                    <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800 rounded-md text-xs font-medium text-slate-600 dark:text-slate-400">OpenAI Compatible</span>
                </div>

                <!-- CTA buttons — left-aligned -->
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href="#quick-start" class="btn-primary">
                        Get Started
                    </a>
                    <a
                        href="https://github.com/andreimerfu/pllm"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn-secondary flex items-center"
                    >
                        <Github className="w-5 h-5 mr-2" />
                        View on GitHub
                    </a>
                </div>
            </div>

            <!-- Terminal illustration — right side -->
            <div class="flex justify-center lg:justify-end">
                <HeroIllustration client:load />
            </div>
        </div>
    </div>
</section>
